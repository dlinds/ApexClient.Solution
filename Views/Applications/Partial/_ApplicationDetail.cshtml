@* @ViewData["IngredientName"] *@
@using ApexClient.Models


@{
  List<Command> commands = ViewData["commandList"] as List<Command>;
  Application application = ViewData["applicationId"] as Application;
}
<div class="w-100 bg-white p-3 rounded border shadow-sm">
  <h1 class="fw-light text-center mb-0">Commands</h1>
  <h3 class="fw-light text-center mb-0">@application.Manufacturer @application.Name @application.Version </h3>
  @if (commands.Count > 0)
  {
    <ol class="mt-3 list-group">
      @{
        foreach (Command command in commands)
        {
          <li class="list-group-item">
            <div class="d-flex justify-content-between">
              <div>
                Apex says @command.Shortcut to @command.Keyword in @command.Application.Name
              </div>
              <div class="d-flex">
                <div class="me-5">
                  Call Count: @command.CallCount
                </div>
                <button type="button" class="btn btn-sm travel-color-darkest text-white" onClick="loadNewCommandForm('@command.Application.ApplicationId', '@command.CommandId')">Edit</button>
              </div>
            </div>
          </li>
        }
      }
    </ol>
  }
  <div class="d-flex justify-content-center">
    <button type="button" onClick="loadNewCommandForm('@application.ApplicationId')" class="btn btn-sm travel-color-darkest text-white mt-3">Add New</button>
  </div>
</div>
