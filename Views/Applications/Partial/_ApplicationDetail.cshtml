@* @ViewData["IngredientName"] *@
@using ApexClient.Models


@{
  List<Command> commands = ViewData["commandList"] as List<Command>;
}
<div class="w-100 bg-white p-3 rounded border shadow-sm">
  <h1 class="fw-light text-center mb-0">Commands</h1>
  <h3 class="fw-light text-center mb-0">@commands[0].Application.Manufacturer @commands[0].Application.Name @commands[0].Application.Version </h3>

  <ol class="mt-3 list-group">
    @{
      foreach (Command command in commands)
      {
        <li class="list-group-item">
          <div class="d-flex justify-content-between">
            <div>
              Apex says @command.Shortcut to @command.Keyword in @command.Application.Name
            </div>
            <div>
              Call Count: @command.CallCount
            </div>
            <div>
              <button type="button" class="btn btn-sm travel-color-darkest text-white">Edit</button>
            </div>
          </div>
        </li>
      }
    }
  </ol>
  <div class="d-flex justify-content-center">
    <button type="button" class="btn btn-sm travel-color-darkest text-white mt-3">Add New</button>
  </div>
</div>
