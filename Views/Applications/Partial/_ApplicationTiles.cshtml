@* @ViewData["IngredientName"] *@
@using ApexClient.Models

<h1 class="fw-light text-center mb-0">Applications</h1>
  @{
    List<Application> applicationResult = ViewData["applicationList"] as List<Application>;
}
  @for (int x = 0; x < applicationResult.Count; x++)
  {
    if (x == 0 || (x % 2 == 0))
    {
      @:<div class="row">
    }
        <div class="col-sm-12 col-lg-6 my-3 ">
          <div class="card shadow-sm bg-white p-2">
            <div class="card border-0">
              <div class="card-body pt-0">
                <div class="px-1 text-dark">
                  <div class="text-center mb-2">
                    <h3 class="fw-normal">@applicationResult[x].Manufacturer @applicationResult[x].Name</h3>
                @applicationResult[x].Version
                  </div>
                </div>
              </div>
            </div>
            <div class="card-body mx-0 py-1">
              <div class="text-center">
                <span onClick="loadCommandByApplicationId('@applicationResult[x].ApplicationId')" class="btn btn-sm travel-color-darkest text-white shadow-sm">
                  Commands
                </span>
              </div>
            </div>
          </div>
        </div>
    if ((x + 1) % 2 == 0)
    {
      @:</div>
    }
  }
